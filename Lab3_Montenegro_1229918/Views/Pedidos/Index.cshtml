@using Lab3_Montenegro_1229918.Models;
@model IEnumerable<Inventario>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LecturaDeArchivo</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        table {
            border: 1px solid #0026ff;
            border-collapse: collapse;
            background-color: aqua;
        }

            table th {
                background-color: aquamarine;
                color: crimson;
                font-weight: bold;
            }

            table th, table td {
                padding: Spx;
                border: 1px solid #ccc;
            }

            table, table table td {
                border: 0px solid #ccc;
            }
    </style>
</head>
<body>

    @using (Html.BeginForm("Index", "Pedidos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="postedFile" />
        <input type="submit" value="Importar" />
    }
    @if (Model.Count() > 0)
    {
        <hr />
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Casa Productora</th>
                <th>Precio</th>
            </tr>
            @foreach (Inventario inventario in Model)
            {
                <tr>
                    <td>@inventario.ID</td>
                    <td>@inventario.nombre</td>
                    <td>@inventario.descripción</td>
                    @*<td>@inventario.descripción2</td>*@
                    <td>@inventario.casaproductora</td>
                    <td>@inventario.precio</td>
                </tr>
            }
        </table>
    }

</body>
</html>
